<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>ServletBasics</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>

<!-- creating the servlet, after that it will invoke the service() method-->

	<!-->HelloWorldServlets-->
	<servlet>
		<servlet-name>HelloServlet</servlet-name>
		<servlet-class>com.saswat.trainings.servlets.HelloWorldServlet</servlet-class>	
	</servlet>
	<servlet-mapping>
		<servlet-name>HelloServlet</servlet-name>
		<url-pattern>/hello</url-pattern>
	</servlet-mapping>
	
	<!-->AdditionServlets-->
	<servlet>
		<servlet-name>AdditionServlet</servlet-name>
		<servlet-class>com.saswat.trainings.servlets.AdditionServlet</servlet-class>	
	</servlet>
	<servlet-mapping>
		<servlet-name>AdditionServlet</servlet-name>
		<url-pattern>/add</url-pattern>
	</servlet-mapping>
	
	
</web-app>